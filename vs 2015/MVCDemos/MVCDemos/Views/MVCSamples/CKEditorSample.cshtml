
@{
    ViewBag.Title = "CKEditorSample";
}

<h2>CKEditor Sample</h2>


@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()

    if (ViewBag.successMessage != null)
    {
        <div class="col-md-12 col-xs-12">
            <div class="text-success">@Html.Raw(@ViewBag.successMessage)</div>
        </div>
    }

    <div class="form-group">
        <div class="col-md-3">@Html.Label("Email to send Html Content")</div>
        <div class="col-md-9">@Html.TextBox("Email", "", new { @class = "form-control" })</div>
    </div>

    <div class="form-group">
        <div class="col-md-3">@Html.Label("Html Content")</div>
        <div class="col-md-9">@Html.TextArea("Note", "", new { @class = "form-control", @id = "textAreaNoteContent" })</div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <input type="submit" value="submit" />
        </div>
    </div>


}

@section scripts
{
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script>CKEDITOR.replace("textAreaNoteContent");</script>
}